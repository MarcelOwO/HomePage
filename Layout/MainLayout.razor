@using Colors = MudBlazor.Colors
@using Variant = MudBlazor.Variant
@inherits LayoutComponentBase

<MudThemeProvider @ref="@_mudThemeProvider" @bind-IsDarkMode="@_isDarkMode"/>


<MudPopoverProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>
<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@(new Action<object>((e) => DrawerToggle()))"/>
        <MudSpacer/>
        <MudButtonGroup Color="Color.Primary" Variant="Variant.Outlined">
            <MudButton>@_buttonText</MudButton>
            <MudMenu Icon="@Icons.Material.Filled.ArrowDropDown" Style="align-self: auto;">
                <MudMenuItem OnClick="() => SetButton(0)">En</MudMenuItem>
                <MudMenuItem OnClick="() => SetButton(1)">De</MudMenuItem>
            </MudMenu>
        </MudButtonGroup>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="2">
        <MudDrawerHeader>
            <MudText Typo="Typo.h5" Class="mt-1">Marcel</MudText>
        </MudDrawerHeader>
        <NavMenu/>
    </MudDrawer>
    <MudMainContent>
        <MudContainer Class="mt-16 px-8" MaxWidth="MaxWidth.False">
            <MudPaper Class="pa-16 ma-2" Elevation="3">
                @Body
            </MudPaper> 
        </MudContainer>
    </MudMainContent>
</MudLayout>


@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    private bool _isDarkMode;
    private MudThemeProvider _mudThemeProvider;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            _isDarkMode = await _mudThemeProvider.GetSystemPreference();
            StateHasChanged();
        }

//change sona depending on light or dark mode and also the image
        _mudThemeProvider.Theme = new MudTheme()
        {
            PaletteDark =
            {
                Primary = Colors.Yellow.Darken3,
            }
        };
    }

    private string _buttonText = "En";

    private void SetButton(int id)
    {
        switch (id)
        {
            case 0:
                _buttonText = "En";
                break;
            case 1:
                _buttonText = "De";
                break;
        }
    }

}