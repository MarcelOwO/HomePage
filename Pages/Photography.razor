@page "/Photography"
<MudPaper id="paper1" Class="pa-15 ma-10 " Elevation="23"  gap-4 Style="overflow: hidden">
    <MudStack>
        <MudText Typo="Typo.h3" Align="Align.Center" Color="Color.Primary">Gear</MudText>
        
        <MudDivider/>
        @foreach (var item in _gear)
        {
            <MudText Typo="Typo.body2" Color="Color.Secondary">@item</MudText>
        }
    </MudStack>
</MudPaper>

<MudPaper id="paper2" Class="pa-15 ma-10 " Elevation="23"  gap-4 Style="overflow: hidden">
    <MudStack>
        <MudText Typo="Typo.h3" Align="Align.Center" Color="Color.Primary">Disclaimer</MudText>
        <MudDivider/>
        <MudText Typo="Typo.body1">
            The image links aren't broken, I just haven't found a cost effective way to host my images.
            I might host the images whenever I get myself a NAS.
        </MudText>
    </MudStack>
</MudPaper>

<MudPaper id="paper3" Class="pa-15 ma-10 " Elevation="23"  gap-4 Style="overflow: hidden">
    <MudStack>
        <MudText Align="Align.Center" Typo="Typo.h3" Color="Color.Primary">Gallaries</MudText>
        <MudDivider/>
        <MudGrid>
            @foreach (var gallery in _gallaries)
            {
                <MudItem xs="6">
                    <MudPaper Class="pa-16 ma-2" Elevation="23" Square="true">
                        <MudImage ObjectFit="ObjectFit.Cover" Src=@gallery.Value/>
                        <MudText Align="Align.Center" Typo="Typo.h5" Color="Color.Primary"Class="position-absolute bottom-0 start-0 p-2 bg-dark " Style="opacity: 0.7;">@gallery.Key</MudText>
                    </MudPaper>
                </MudItem>
            }
        </MudGrid>
    </MudStack>
</MudPaper>

@code {

    private Dictionary<string, string> _gallaries = new()
    {
       
    };

    private readonly List<string> _gear =
    [
        "Camera: Sony A7R4",
        "Lens: Sigma 24-70mm f2.8 DG DN | Art",
        "Lens: Sony FE 90mm F2.8 Macro G OSS",
        "Lens: Sony 50mm F1.8",
        "Lens: Tamron 24mm F2.8",
        "Tripod: Rollei",
        "Gimbal: DJI RS 4",
        "Flash: Sony HVL-F46RM",
        "Microphone: Sony ECM-M1",
    ];

}